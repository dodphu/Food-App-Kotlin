<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgv_fooditem_buyagain"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/humbergertest" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_name_fooditem_buyagain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tên món ăn"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/txt_price_fooditem_buyagain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Giá" />
            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_buyagain_fooditem_buyagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#139518"
                android:text="Mua lại"
                android:textSize="10sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>